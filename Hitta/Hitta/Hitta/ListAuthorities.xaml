<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:i18n="clr-namespace:Hitta.Helpers;assembly=Hitta" 
             x:Class="Hitta.ListAuthorities">
    <ContentPage.Content>
        <StackLayout Padding="10">
            <ListView  x:Name="AuthorityView" Margin="10">
                <ListView.Header>
                    <ContentView Padding="0,5">
                        <Label FontSize="Large" TextColor="Black" x:Name="LabelAuthority"></Label>
                    </ContentView>
                </ListView.Header>
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell x:Name="Authority">
                            <StackLayout BackgroundColor="#eee" Orientation="Vertical">
                                <StackLayout Orientation="Horizontal">
                                    <Image Source="{Binding Image}" HeightRequest="50" WidthRequest="50" />
                                    <Label Text="{Binding Name}" TextColor="#f35e20" FontSize="Medium"/>
                                </StackLayout>
                            </StackLayout>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>