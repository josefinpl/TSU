@model Admin.Models.ViewModels.NumberVM
@{
    ViewBag.Title = "Ändra nummer";
}

<div class="container">
   
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Authority_Id)
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(model => model.Name, new { htmlAttributes = new { @class = "control-label" } })
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </dd>
                <dt>
                    @Html.LabelFor(model => model.Number1, new { htmlAttributes = new { @class = "control-label" } })
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Number1, new { htmlAttributes = new { @class = "form-control" } })
                </dd>

            </dl>


            <div class="form-actions no-color" id="buttons">
                <input type="submit" value="Ändra" id="changeButton"class="btn btn-success" />
                <button type="button" class="btn btn-secondary" id="closeButton" data-dismiss="modal">Stäng</button>
            </div>
        }
    
</div>

