@model Admin.Models.ViewModels.HourVM
@{
    ViewBag.Title = "EditHour";
}

<div class="container">

    <h5>Redigera öppettid och/eller beskrivning:</h5>

    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <hr />
            @Html.HiddenFor(model => model.Id)
            @Html.HiddenFor(model => model.Authority_Id)
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(model => model.Name, new { htmlAttributes = new { @class = "control-label" } })
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control" } })
                </dd>
                <dt>
                    @Html.LabelFor(model => model.Open, new { htmlAttributes = new { @class = "control-label" } })
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Open, new { htmlAttributes = new { @class = "form-control" } })
                </dd>
                <dt>
                    @Html.LabelFor(model => model.Close, new { htmlAttributes = new { @class = "control-label" } })
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Close, new { htmlAttributes = new { @class = "form-control" } })
                </dd>

            </dl>


            <div class="form-actions no-color">
                <input type="submit" value="Ändra" class="btn btn-danger" />
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Stäng</button>
            </div>
        }
    </div>
</div>
