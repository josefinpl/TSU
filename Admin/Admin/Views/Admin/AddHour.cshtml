@model Admin.Models.ViewModels.HourVM
@{
    ViewBag.Title = "Lägg till öppettid";
}

<div class="container">

    <div>
        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <hr />
            @Html.HiddenFor(model => model.Authority_Id)
            <dl class="dl-horizontal">
                <dt>
                    @Html.LabelFor(model => model.Name, new { htmlAttributes = new { @class = "control-label" } })
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Name, new { htmlAttributes = new { @class = "form-control", @placeholder = "Beskrivning" } })
                </dd>
                <dt>
                    @Html.LabelFor(model => model.Open, new { htmlAttributes = new { @class = "control-label" } })
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Open, new { htmlAttributes = new { @class = "form-control", @placeholder = "Öppnar" } })
                </dd>
                <dt>
                    @Html.LabelFor(model => model.Close, new { htmlAttributes = new { @class = "control-label" } })
                </dt>

                <dd>
                    @Html.EditorFor(model => model.Close, new { htmlAttributes = new { @class = "form-control", @placeholder = "Stänger" } })
                </dd>

            </dl>


            <div class="form-actions no-color" id="buttons">
                <input type="submit" value="Lägg till" id="changeButton" class="btn btn-success" />
                <button type="button" class="btn btn-secondary" id="closeButton" data-dismiss="modal">Stäng</button>
            </div>
        }
    </div>
</div>

